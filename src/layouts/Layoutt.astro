<style is:global>
  :root {
    font-family: "Montserrat", sans-serif;
    background: #d8eefe;
    color: #094067;

    font-size: 16px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .text-animal {
    text-align: center;
    margin-block-start: 2rem;
    margin-block-end: 2.5rem;
    font-size: 1.4rem;
    padding-inline: 1.5rem;
  }

  .title {
    padding: 2rem;
    padding-block-end: 0;
    font-size: 3.5rem;
    text-shadow: 2px 2px 0 black;
    color: #2879bd;
  }
  .poema {
    margin-inline: auto;
    margin-block: 1rem;
    padding-inline: 1rem;
    max-width: 1200px;
    font-size: 1.1rem;
  }
  .containerGift {
    padding-inline: 2.5rem;
    max-width: 1200px;
    margin: 40px auto 100px auto;

    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  .containerGift .pelicula {
    text-align: center;
  }
  .containerGift .titulo {
    font-size: 16px;
    font-weight: 600;
  }
  .containerGift .pelicula .poster {
    width: 100%;
    height: 100%;
    margin-bottom: 10px;
    border-radius: 8px;
    block-size: 15rem;
  }

  @media screen and (max-width: 768px) {
    :root {
      font-size: 11px;
    }
    .containerGift {
      padding-inline: 1.5rem;
      max-width: 100%;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
  }
  @media screen and (max-width: 500px) {
    .containerGift {
      grid-template-columns: repeat(2, 1fr);
      padding-inline: 0.5rem;
    }
  }
</style>
